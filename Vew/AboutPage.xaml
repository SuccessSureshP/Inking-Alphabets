<Page
    x:Class="InkingAlphabets.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InkingAlphabets.Vew"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <CommandBar Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                    Foreground="White">
            <CommandBar.Content>
                <Grid Height="48">
                    <TextBlock Style="{StaticResource AppTitleTextBlockStyle}"
                               Text="About" 
                               />
                </Grid>
            </CommandBar.Content>            
        </CommandBar>
        <Grid  Grid.Row="1" BorderThickness="1,1,1,1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <RichTextBlock Grid.ColumnSpan="3">
                <Paragraph FontSize="30">
                    This is a very useful app for anyone who want to learn new language, or enable kids to practice alphabets of new language. You can add your own languages. Inking slate is very useful for anyone to explain anything. It is virtual white board.
                </Paragraph>             

                <Paragraph FontSize="30" Margin="0,30,0,0">
                    Please share your feedback and suggestions by emailing me or by writing a review. Thanks for using this app.
                </Paragraph>
            </RichTextBlock>

            <Button Content="Send Feedback" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{ThemeResource  SystemControlBackgroundAccentBrush}" Foreground="White"/>
            <Button Content="Rate and Review this App" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{ThemeResource  SystemControlBackgroundAccentBrush}" Foreground="White"/>
            <Button Content="Show App Detials" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{ThemeResource  SystemControlBackgroundAccentBrush}" Foreground="White"/>
        </Grid>
    </Grid>
</Page>
